from tkinter import *
__import__(background.jpg.)
root = Tk()
but = Button(root,
             text="Start game",  # надпись на кнопке
             width=30, height=5,  # ширина и высота
             bg="white", fg="orange")  # цвет фона и надписи
buto = Button(root,
              text="Settings",  # надпись на кнопке
              width=30, height=5,  # ширина и высота
              bg="white", fg="black")  # цвет фона и надписи
buton = Button(root,
               text="Exit",  # надпись на кнопке
               width=30, height=5,  # ширина и высота
               bg="white", fg="red")  # цвет фона и на
root.minsize(666, 666)
root.maxsize(1600, 1600)
but.pack()
buto.pack()
buton.pack()
root.mainloop()
